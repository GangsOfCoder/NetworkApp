    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="DialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ContactStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/colorBlack</item>
    </style>

    <style name="DialogZoomAnim">
        <item name="android:windowEnterAnimation">@anim/anim_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_zoom_out</item>
    </style>


</resources>
